<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pp.test3.MainActivity">


    <Button
        android:id="@+id/btnDetectFace"
        android:text="Detect Face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnLoad"
        android:text="Find Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnDetectFace"
        android:layout_marginLeft="7dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"  />


    <Button
        android:id="@+id/btnBlush"
        android:text="Blush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnLoad"
        android:layout_marginLeft="7dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/black"
         />

    <Button
        android:id="@+id/btnEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye"
        android:layout_toRightOf="@+id/btnBlush"
        android:layout_marginLeft="7dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="395dp"
        android:layout_height="450dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/btnDetectFace"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
